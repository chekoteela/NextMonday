<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="StyleTextInputLayout" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/OnPrimary</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginStart">30dp</item>
    </style>

    <style name="StyleTextInputEditText" parent="Widget.Design.TextInputLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>



    <style name="text_field_style" parent="Theme.AppCompat.DayNight">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/text_field_background</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">@color/text_field_hint</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_style" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_view_text_size</item>
    </style>

    <style name="text_view_select_style" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:textColor">@color/text_view_select</item>
        <item name="android:textSize">@dimen/text_view_text_size</item>
    </style>

    <style name="button_style" parent="Theme.AppCompat.DayNight">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="check_box_style" parent="Theme.MaterialComponents">
        <item name="colorAccent">@color/check_box_accent</item>
    </style>

    <style name="time_picker_style" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/time_picker_color_accent</item>
        <item name="colorControlActivated">@color/time_picker_control_activated</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:headerBackground">@color/time_picker_background</item>
        <item name="android:dayOfWeekBackground">@color/time_picker_background</item>
        <item name="android:backgroundSplit">@color/time_picker_background</item>
        <item name="android:windowBackground">@color/time_picker_background</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="switch_style" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlActivated">@color/color_button_grad</item>
    </style>









    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/calculator_auto_edittext</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StandartTV" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/white</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MyCheckBox" parent="custom_check_box">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="StyleCalendarView" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:fontFamily">@font/play</item>
        <item name="android:unfocusedMonthDateColor">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/calendar_focuse_date</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="colorCheckBox" parent="Theme.MaterialComponents">
        <item name="colorAccent">@color/color_button_grad</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="android:background">@color/dairy_navigation_view_gradient_one</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:unfocusedMonthDateColor">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/dairy_navigation_view_gradient_one</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="CustomSwitch" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlActivated">@color/color_button_grad</item>
    </style>

    <style name="MainMenu" parent="Theme.AppCompat">
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="CustomShapeAppearance">

        <item name="neumorph_cornerSize">100dp</item>
        <!-- Or if wants different radii depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">16dp</item>
        <item name="neumorph_cornerSizeTopRight">16dp</item>
        <item name="neumorph_cornerSizeBottomLeft">16dp</item>
        <item name="neumorph_cornerSizeBottomRight">16dp</item>
    </style>

    <style name="StandardTextView" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="StandartTextView" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="EditText_change_food_white" parent="Theme.AppCompat.DayNight">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/text_field_background</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">#8F8E8E</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_setting_style" parent="Theme.AppCompat.DayNight">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/button_background</item>

    </style>

</resources>