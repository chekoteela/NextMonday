<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dairy_header</item>
    </style>

    <style name="StandartTV" parent="Theme.AppCompat.DayNight">
    <item name="colorAccent">@color/white</item>
    <item name="android:fontFamily">@font/play</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:textSize">14sp</item>
    </style>

    <style name="MyCheckBox" parent="custom_check_box">
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="StyleCalendarView" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:fontFamily">@font/play</item>
        <item name="android:unfocusedMonthDateColor">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/calculator_color</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:textSize">20sp</item>

    </style>

    <style name="colorCheckBox" parent="Theme.MaterialComponents">
        <item name="colorAccent">@color/color_button_grad</item>
    </style>


    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorPrimary">@android:color/darker_gray</item>

        <item name="android:background">@color/dairy_navigation_view_gradient_one</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:unfocusedMonthDateColor">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/dairy_navigation_view_gradient_one</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="CustomSwitch" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorControlActivated">@color/color_button_grad</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/dairy_create_task_linear_layout_gradient_one</item>
        <item name="colorControlActivated">@color/dairy_create_task_linear_layout_gradient_two</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:headerBackground">@color/style_datepiker_header</item>
        <item name="android:dayOfWeekBackground">@color/style_datepiker_header</item>
        <item name="android:backgroundSplit">@color/style_datepiker_header</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/style_datepiker_header</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainMenu" parent="Theme.AppCompat">
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="CustomShapeAppearance">

        <item name="neumorph_cornerSize">100dp</item>

        <!-- Or if wants different radii depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">16dp</item>
        <item name="neumorph_cornerSizeTopRight">16dp</item>
        <item name="neumorph_cornerSizeBottomLeft">16dp</item>
        <item name="neumorph_cornerSizeBottomRight">16dp</item>
    </style>

    <style name="StandartTextView" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="EditText_change_food_white" parent="Theme.AppCompat.DayNight">
        <item name="android:textSize">14sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="EditText_change_food_black" parent="Theme.AppCompat.DayNight">
        <item name="android:textSize">14sp</item>
        <item name="android:textColorHint">#8F8E8E</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>