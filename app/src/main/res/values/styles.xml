<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="styleButton" parent="Theme.AppCompat.DayNight">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/calculator_button</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="styleTextView" parent="Theme.AppCompat.DayNight">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/play</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="styleInputLayout" parent="Theme.AppCompat.DayNight">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>
    <style name="styleEditText" parent="Theme.AppCompat.DayNight">
        <item name="android:fontFamily">@font/play</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/calculator__background_edittext</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">#8F8E8E</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
    </style>

    <style name="styleMainMenu" parent="Theme.AppCompat">
        <item name="colorPrimary">@android:color/darker_gray</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="styleCheckBox" parent="Theme.AppCompat.DayNight">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
    </style>

    <style name="colorCheckBox" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/global__styleButton_background</item>
    </style>

    <style name="styleCalendarView" parent="Theme.AppCompat.DayNight">
        <item name="android:fontFamily">@font/play</item>
        <item name="android:unfocusedMonthDateColor">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorAccent">@color/dairy__calendar_focus_date</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

        <style name="CalenderViewCustom" parent="Theme.AppCompat">
            <item name="colorPrimary">@android:color/darker_gray</item>
            <item name="android:background">@color/dairy__calendar_background_accent</item>
            <item name="android:fontFamily">@font/play</item>
            <item name="android:unfocusedMonthDateColor">@color/purple_500</item>
            <item name="android:textColor">@color/white</item>
            <item name="colorAccent">@color/dairy__calendar_background_accent</item>
            <item name="colorControlHighlight">@color/black</item>
            <item name="colorSwitchThumbNormal">@color/white</item>
            <item name="android:textSize">20sp</item>
        </style>

        <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
            <item name="android:textColor">@color/white</item>
            <item name="android:textStyle">bold</item>
            <item name="android:textSize">12sp</item>
        </style>

    <style name="styleAlertDialog" parent="Theme.AppCompat.DayNight">
        <item name="android:windowBackground">@color/global__background</item>
        <item name="android:textColor">@color/white</item>
    </style>

