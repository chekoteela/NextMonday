    <style name="styleSwitch" parent="Theme.AppCompat.DayNight">
        <item name="colorControlActivated">@color/global__styleButton_background</item>
    </style>

    <style name="styleTimePicker" parent="Theme.AppCompat.DayNight">
        <item name="colorAccent">@color/dairy__styleTimePicker_Accent</item>
        <item name="colorControlActivated">@color/dairy__styleTimePicker_ControlActivated</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:headerBackground">@color/dairy__styleTimePicker_multiply</item>
        <item name="android:dayOfWeekBackground">@color/dairy__styleTimePicker_multiply</item>
        <item name="android:backgroundSplit">@color/dairy__styleTimePicker_multiply</item>
        <!--Calender Background color -->
        <item name="android:windowBackground">@color/dairy__styleTimePicker_multiply</item>
        <!-- Ok Cancel Color-->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomShapeAppearance" parent="Theme.AppCompat.DayNight">
        <item name="neumorph_cornerSize">100dp</item>
        <!-- Or if wants different radii depending on the corner. -->
        <item name="neumorph_cornerSizeTopLeft">16dp</item>
        <item name="neumorph_cornerSizeTopRight">16dp</item>
        <item name="neumorph_cornerSizeBottomLeft">16dp</item>
        <item name="neumorph_cornerSizeBottomRight">16dp</item>
    </style>




    <style name="EditText_change_food_white" parent="Theme.AppCompat.DayNight">
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/calculator__background_edittext</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColorHint">#8F8E8E</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>





