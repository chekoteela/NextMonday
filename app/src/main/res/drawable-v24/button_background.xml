<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/calculator_button_ripple"
    tools:targetApi="lollipop">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/calculator_color" />
            <gradient
                android:centerColor="@color/calculator_color"
                android:endColor="@color/calculator_color"
                android:startColor="@color/calculator_color" />
            <stroke
                android:width="1dp"
                android:color="@color/black" />
            <corners android:radius="12dp" />

        </shape>
    </item>
</ripple>