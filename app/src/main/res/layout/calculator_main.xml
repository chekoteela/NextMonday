<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_calculator"
    android:orientation="vertical"
    tools:context=".ui.Calculator.Calculator_Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <soup.neumorphism.NeumorphCardView
                android:layout_width="410dp"
                android:layout_height="250dp"
                android:padding="20dp"
                app:neumorph_shadowColorDark="@color/shadowColorDark"
                app:neumorph_shadowColorLight="@color/shadowColorLight">

                <com.progress.progressview.ProgressView
                    android:id="@+id/calorie"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:pvBackgroundColor="@color/bar_calor_color_rim"
                    app:pvBackgroundWidth="10dp"
                    app:pvDirection="fromLeft"
                    app:pvProgressColor="@color/bar_calor_color_progress"
                    app:pvProgressWidth="20dp"
                    app:pvShape="circle" />

                <TextView
                    android:id="@+id/percent_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:text="62%"
                    android:textColor="@color/white"
                    android:textSize="32dp"
                    tools:layout_editor_absoluteX="93dp"
                    tools:layout_editor_absoluteY="249dp" />

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="3dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:background="@color/bar_fat_carbs_color_progress" />

                <TextView
                    android:id="@+id/eat_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp"
                    android:text="3204"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="93dp"
                    tools:layout_editor_absoluteY="249dp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:text="ккал"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    tools:layout_editor_absoluteX="93dp"
                    tools:layout_editor_absoluteY="249dp" />

                <LinearLayout
                    android:layout_width="13dp"
                    android:layout_height="13dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginBottom="1dp"
                    android:background="@drawable/calculator_linear_white" />

                <TextView
                    android:id="@+id/eat_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="59dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/play"
                    android:text="78"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/all_calorie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="59dp"
                    android:layout_marginLeft="45dp"
                    android:fontFamily="@font/play"
                    android:text="78"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:textStyle="bold" />

                <LinearLayout
