                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/play"
                        android:text="78"
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="right|bottom"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="21dp"
                        android:background="@drawable/calculator_linear_orange" />
                </soup.neumorphism.NeumorphCardView>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <FrameLayout
                android:layout_weight="1"
                android:layout_width="180dp"
                android:layout_height="180dp">

                <soup.neumorphism.NeumorphCardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:padding="20dp"
                    app:neumorph_shadowColorDark="@color/shadowColorDark"
                    app:neumorph_shadowColorLight="@color/shadowColorLight">

                    <com.progress.progressview.ProgressView
                        android:id="@+id/protein"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        app:pvBackgroundColor="@color/bar_prot_water_color_rim"
                        app:pvBackgroundWidth="20dp"
                        app:pvDirection="fromLeft"
                        app:pvProgressColor="@color/bar_prot_water_color_progress"
                        app:pvProgressWidth="21dp"
                        app:pvShape="arc" />

                    <TextView
                        android:id="@+id/percent_protein"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="62%"
                        android:textColor="@color/white"
                        android:textSize="32dp"
                        tools:layout_editor_absoluteX="93dp"
                        tools:layout_editor_absoluteY="249dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="3dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginTop="25dp"
                        android:background="@color/bar_fat_carbs_color_progress" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="75dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="15dp"
                        android:text="Білки"
                        android:textColor="@color/white"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/eat_p"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/play"
                        android:text="333"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="right|bottom"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="1dp"
                        android:background="@drawable/calculator_linear_white" />

                    <TextView
                        android:id="@+id/eat_protein"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="20dp"
                        android:fontFamily="@font/play"
                        android:text="78"
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/all_protein"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/play"
                        android:text="78"
                        android:textColor="@color/white"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_gravity="right|bottom"
                        android:layout_marginRight="30dp"
                        android:layout_marginBottom="21dp"
                        android:background="@drawable/calculator_linear_orange" />
                </soup.neumorphism.NeumorphCardView>
            </FrameLayout>

            <FrameLayout
                android:layout_width="180dp"
                android:layout_height="180dp">

                <soup.neumorphism.NeumorphCardView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:padding="20dp"
                    app:neumorph_shadowColorDark="@color/shadowColorDark"
                    app:neumorph_shadowColorLight="@color/shadowColorLight">

                    <com.progress.progressview.ProgressView
                        android:id="@+id/watter"
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        app:pvBackgroundColor="@color/bar_prot_water_color_rim"
                        app:pvBackgroundWidth="20dp"
                        app:pvDirection="fromLeft"
                        app:pvProgressColor="@color/bar_prot_water_color_progress"
                        app:pvProgressWidth="21dp"
                        app:pvShape="arc" />

                    <TextView
                        android:id="@+id/percent_watter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="62%"
                        android:textColor="@color/white"
                        android:textSize="32dp"
                        tools:layout_editor_absoluteX="93dp"
                        tools:layout_editor_absoluteY="249dp" />

