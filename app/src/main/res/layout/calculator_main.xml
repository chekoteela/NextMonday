            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearr"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:visibility="gone">

        <Button
            android:id="@+id/add_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add_food" />

        <Button
            android:id="@+id/add_watter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add_watter" />

        <Button
            android:id="@+id/add_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add_weight" />

        <Button
            android:id="@+id/add_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add_activity" />


    </LinearLayout>

    <com.michaldrabik.tapbarmenulib.TapBarMenu

        android:layout_above="@+id/bar"
        android:layout_marginBottom="10dp"
        android:id="@+id/tapBarMenu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="5dp"
        app:tbm_backgroundColor="@color/red"
        app:tbm_buttonPosition="right"
        app:tbm_menuAnchor="top">

        <ImageView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:src="@drawable/food"
            android:id="@+id/add"/>

        <ImageView

            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/water" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/weigth" />

        <ImageView
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:src="@drawable/activity" />


    </com.michaldrabik.tapbarmenulib.TapBarMenu>

    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dairy_navigation_bottom_bar"
        app:itemBackground="@drawable/dairy_navigation_bottom_bar"
        app:itemIconTint="#fff"
        app:itemTextColor="#fff"
        app:menu="@menu/calculator_bottom_navigation_bar" />






</RelativeLayout>