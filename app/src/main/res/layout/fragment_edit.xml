<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_layout"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent"
            >

                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/name"
                    android:layout_marginTop="25dp"
                    android:layout_marginHorizontal="34dp"
                    android:fontFamily="@font/play"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:contentDescription="@string/name2"
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:layout_marginHorizontal="34dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/play"
                    android:background="@drawable/edit_text"
                    android:padding="5dp"
                    android:layout_height="50dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:fontFamily="@font/play"
                    android:layout_marginHorizontal="34dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:text="@string/lastName"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:contentDescription="@string/lastName2"
                    android:id="@+id/last_name"
                    android:layout_width="match_parent"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:fontFamily="@font/play"
                    android:textColor="@color/black"
                    android:layout_marginHorizontal="34dp"
                    android:background="@drawable/edit_text"
                    android:layout_height="50dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:text="@string/your_email"
                    android:fontFamily="@font/play"
                    android:textColor="@color/white"
                    android:layout_marginHorizontal="34dp"
                    android:textSize="14sp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/email"
                    android:contentDescription="@string/SignEmail2"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/play"
                    android:layout_marginBottom="33dp"
                    android:layout_marginHorizontal="34dp"
                    android:background="@drawable/edit_text"
                    android:layout_height="50dp"/>

                <EditText
                    android:visibility="gone"
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:padding="5dp"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/play"
                    android:layout_marginBottom="33dp"
                    android:layout_marginHorizontal="34dp"
                    android:inputType="textPassword"
                    android:background="@drawable/edit_text"
                    android:layout_height="50dp"/>

                <Button
                    android:contentDescription="@string/save2"
                    android:visibility="gone"
                    android:id="@+id/save"
                    android:layout_width="match_parent"
                    android:background="@drawable/button_login"
                    android:text="@string/save"
                    android:layout_marginHorizontal="34dp"
                    android:fontFamily="@font/play"
                    android:padding="5dp"
                    android:layout_marginBottom="33dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"/>

                <Button
                    android:id="@+id/change_pass"
                    android:contentDescription="@string/changePass"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/play"
                    android:textSize="14sp"
                    android:layout_marginHorizontal="34dp"
                    android:textColor="@color/white"
                    android:text="@string/change_pass"
                    android:background="@drawable/button_login"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:visibility="gone"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="34dp"
                    android:textSize="14sp"
                    android:id="@+id/text"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Вы не можете редактировать профиль, так как зарегистрированы через Google" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

                <com.google.android.gms.ads.AdView
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adView"
                    android:elevation="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    ads:adSize="BANNER"
                    ads:adUnitId="@string/banner_ad_unit_id">
                </com.google.android.gms.ads.AdView>

        </LinearLayout>

</RelativeLayout>