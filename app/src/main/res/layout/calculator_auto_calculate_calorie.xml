<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/global__background">

    <com.google.android.material.tabs.TabLayout

        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/global__background"
        app:tabIndicatorColor="@color/calculator__auto_tab_layout_border_bottom"
        app:tabSelectedTextColor="@color/white"
        app:tabTextColor="@color/white">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/descr_automatic_tuning"
            android:text="@string/auto_tuning" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/descr_manual_setting"
            android:text="@string/manual_setting" />


    </com.google.android.material.tabs.TabLayout>

<ScrollView
    android:layout_below="@+id/tab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/global__background"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/styleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/your_weigth"
                    android:textSize="18sp" />


                <EditText
                    android:inputType="numberDecimal"
                    android:id="@+id/this_weight"
                    android:gravity="center"
                    android:hint="@string/kg"
                    style="@style/styleEditText"
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:layout_margin="5dp" />

                <TextView
                    style="@style/styleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/age"
                    android:textSize="18sp" />


                <EditText
                    android:hint="@string/how_much_age"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:id="@+id/age"
                    style="@style/styleEditText"
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:layout_margin="5dp"
                    android:padding="5dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/global__background"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/styleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/desired_weight"
                    android:textSize="18sp" />


                <EditText
                    android:gravity="center"
                    android:hint="@string/kg"
                    android:inputType="numberDecimal"
                    android:id="@+id/desired_weight"
                    style="@style/styleEditText"
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:layout_margin="5dp"
                    android:padding="5dp" />

                <TextView
                    style="@style/styleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/height"
                    android:textSize="18sp" />


                <EditText
                    android:gravity="center"
                    android:hint="@string/sm"
                    android:inputType="numberDecimal"
                    android:id="@+id/height"
                    style="@style/styleEditText"
                    android:layout_width="100dp"
                    android:layout_height="43dp"
                    android:layout_margin="5dp"
                    android:padding="5dp" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/global__background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/calculator_auto_calculate_edittext_cursor"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:padding="5dp"
                android:text="@string/choose_gender"
                style="@style/styleTextView"
                android:textSize="18sp"/>

            <RadioGroup
                android:id="@+id/sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">

                <RadioButton
                    android:id="@+id/male"
                    style="@style/styleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:contentDescription="@string/desc_male"
                    android:text="@string/male" />

                <RadioButton
                    android:id="@+id/female"
                    style="@style/styleRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:contentDescription="@string/desc_female"
                    android:text="@string/female" />
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/calculator__auto_color_linear" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/global__background"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/form"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/styleTextView"
                    android:textSize="18sp"
                    android:text="@string/check_F"
                    />

                <TextView
                    android:layout_marginStart="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/styleTextView"
                    android:textSize="20sp"
                    android:text="@string/question_mark"
                    />
            </LinearLayout>



            <RadioGroup
                android:id="@+id/formula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/harrison_formula"
                    style="@style/styleRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:contentDescription="@string/desc_harris_benedict_equation"
                    android:text="@string/F_garrison_benedict" />

                <RadioButton
                    android:id="@+id/miffin_formula"
                    style="@style/styleRadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/desc_mifflin_st_jeor_formula"
                    android:text="@string/F_mifflin_san_geor" />

            </RadioGroup>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/calculator__auto_color_linear" />


        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/spinner_target"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/descr_your_aim"
            app:smsp_arrowColor="@color/white"
            app:smsp_floatingLabelColor="@color/white"
            app:smsp_hint="Ваша цель"
            app:smsp_hintColor="@color/white"
            app:smsp_itemColor="@color/white"
            app:smsp_underlineColor="@color/white" />


        <com.chivorn.smartmaterialspinner.SmartMaterialSpinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/descr_choose_activity"
            app:smsp_arrowColor="@color/white"
            app:smsp_floatingLabelColor="@color/white"
            app:smsp_hint="@string/choose_activity"
            app:smsp_hintColor="@color/white"
            app:smsp_itemColor="@color/white"
            app:smsp_underlineColor="@color/white" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">


            <Button
                android:id="@+id/to_calculate"
                style="@style/styleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/desc_calculate"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:text="@string/calculation" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    style="@style/styleTextView"
                    android:text="@string/Sum" />

                <TextView
                    android:id="@+id/conclusion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/styleTextView" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/save"
            style="@style/styleButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="60dp"
            android:contentDescription="@string/descr_save"
            android:padding="10dp"
            android:text="@string/save" />
        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:elevation="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>
</ScrollView>


</RelativeLayout>





