<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">


    <LinearLayout
        android:id="@+id/liner_for_long_press"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/food_item_list"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/up_linear_xml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_product_xml"
                style="@style/StandardTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="18sp" />

            <TextView
                android:paddingEnd="20dp"
                android:id="@+id/weight_food_xml"
                style="@style/StandardTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_weight="1"
                android:textAlignment="textEnd" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/calculator_auto_edittext" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/protein_xml"
                style="@style/StandardTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/play"
                android:text="@string/Protein" />


            <TextView
                android:id="@+id/carbohydrate_xml"
                style="@style/StandardTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/Carbs" />

            <TextView
                android:id="@+id/fat_xml"
                style="@style/StandardTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="@string/Fat" />

            <TextView
                android:id="@+id/calorie_xml"
                style="@style/StandardTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1" />


        </LinearLayout>
    </LinearLayout>


</RelativeLayout>