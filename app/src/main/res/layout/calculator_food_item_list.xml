<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/liner_for_long_press"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@drawable/food_item_list"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/up_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/name_product"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:fontFamily="@font/play"
            android:layout_margin="10dp"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:text="name" />

        <TextView
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/weight_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginVertical="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/play"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="200dp"
             />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/calculator_auto_edittext"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/calorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:fontFamily="@font/play"
            android:text="Білки" />

        <TextView
            android:id="@+id/fat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/play"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:textSize="14sp"
            android:text="Вуглеводи" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/carbohydrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/play"
            android:text="Жири"/>

        <TextView
            android:textStyle="bold"
            android:id="@+id/protein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/play"
            android:textSize="14sp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:text="25 "/>

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>