<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradient_layout"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Calculator.ChangeFood">



    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:text="Введите полное название продукта иначе он не будет доступен в общей базе даных"
        android:layout_margin="20dp"
        android:fontFamily="@font/play"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textAlignment="center"/>
    <EditText
        android:layout_marginVertical="9dp"
        android:layout_below="@+id/text"
        android:id="@+id/name"
        android:padding="5dp"
        android:inputType="text"
        android:textColor="@color/black"
        android:fontFamily="@font/play"
        android:textSize="14sp"
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20sp"
        android:hint="name"/>

    <EditText
        android:padding="5dp"
        android:layout_marginVertical="9dp"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:inputType="number"
        android:fontFamily="@font/play"
        android:id="@+id/portion"
        android:background="@drawable/edit_text"
        android:layout_below="@id/name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20sp"
        android:hint="portion"/>


    <EditText
        android:padding="5dp"
        android:layout_marginVertical="9dp"
        android:inputType="number"
        android:id="@+id/calorie"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/play"
        android:layout_below="@id/portion"
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginHorizontal="20sp"
        android:hint="calorie"/>

    <ScrollView
        android:layout_above="@+id/save_change"
        android:layout_width="match_parent"
        android:id="@+id/scrool"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calorie">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:fontFamily="@font/play"
                    android:text="Белки"
                    android:textColor="@color/white"
                    android:textSize="18dp" />

                <EditText
                    android:padding="5dp"
                    android:layout_marginVertical="5dp"
                    android:inputType="numberDecimal"
                    android:id="@+id/protein"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20sp"
                    android:background="@drawable/edit_text"
                    android:fontFamily="@font/play"
                    android:hint="Вес"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:id="@+id/whey_protein"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/edit_text"
                    android:fontFamily="@font/play"
                    android:hint="Сывороточный протеин"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginVertical="5dp"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:id="@+id/soy_protein"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text"
                    android:fontFamily="@font/play"
                    android:hint="Соевый протеин"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:id="@+id/agg_protein"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/edit_text"
                    android:fontFamily="@font/play"
                    android:hint="Яичный протеин"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:id="@+id/casein_protein"
                    android:layout_width="match_parent"
                    android:background="@drawable/edit_text"
                    android:fontFamily="@font/play"
                    android:hint="Казеиновый протеин"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20sp"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/play"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Углеводы" />

                <EditText
                    android:padding="5dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:inputType="numberDecimal"
                    android:textColor="@color/black"
                    android:fontFamily="@font/play"
                    android:textSize="14sp"
                    android:background="@drawable/edit_text"
                    android:id="@+id/carbohydrate"
                    android:layout_width="match_parent"
                    android:hint="Вес" />

                <EditText
                    android:inputType="numberDecimal"
                    android:fontFamily="@font/play"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:background="@drawable/edit_text"
                    android:id="@+id/simple_carbohydrates"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:hint="Простые" />

                <EditText
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/edit_text"
                    android:textColor="@color/black"
                    android:fontFamily="@font/play"
                    android:textSize="14sp"
                    android:id="@+id/complex_carbohydrate"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:hint="Сложные" />


            </LinearLayout>
            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/play"
                    android:textSize="18dp"
                    android:text="Жиры" />

                <EditText
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:fontFamily="@font/play"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/edit_text"
                    android:id="@+id/fat"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"

                    android:hint="Вес"/>

                <EditText
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/edit_text"
                    android:id="@+id/saturated_fat"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:hint="Насыщенные жирные кислоты"/>

                <EditText
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/edit_text"
                    android:id="@+id/trans_fat"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:hint="trans fat"/>

                <EditText
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/edit_text"
                    android:id="@+id/omega9"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:hint="omega 9"/>

                <EditText
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/edit_text"
                    android:id="@+id/omega6"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:hint="Полиненасыщенные жирные кислоты(Омега-6)"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <EditText
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/edit_text"
                    android:id="@+id/omega3"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:hint="Полиненасыщенные жирные кислоты (Омега-3)"/>

                <EditText
                    android:layout_marginRight="13dp"
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/edit_text"
                    android:id="@+id/ala"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="Альфа-линоленовая кислота(ALA)"/>

                <EditText
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/edit_text"
                    android:id="@+id/dha"
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_marginRight="13dp"
                    android:layout_height="40dp"
                    android:hint="Докозагексаеновая кислота(DHA)"/>

                <EditText
                    android:layout_marginRight="13dp"
                    android:inputType="numberDecimal"
                    android:padding="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/edit_text"
                    android:id="@+id/epa"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="Эйкозапентаеновая кислота(EPA)"/>

                </LinearLayout>
            </LinearLayout>




            <LinearLayout
                android:layout_marginHorizontal="20dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="18sp"
                    android:fontFamily="@font/play"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Дополнительно"/>

                <EditText
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/edit_text"
                    android:id="@+id/cellulose"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:hint="Клетчатка"/>

                <EditText
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/edit_text"
                    android:id="@+id/watter"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:hint="Вода"/>

                <EditText
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/edit_text"
                    android:id="@+id/salt"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:hint="Соль"/>

                <EditText
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/edit_text"
                    android:id="@+id/calcium"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:hint="Ca"/>

                <EditText
                    android:padding="5dp"
                    android:inputType="numberDecimal"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:background="@drawable/edit_text"
                    android:id="@+id/potassium"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginVertical="5dp"
                    android:layout_height="40dp"
                    android:hint="K"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <Button
        android:padding="5dp"
        android:id="@+id/save_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:background="@drawable/calculator_button"
        android:layout_above="@+id/bar"
        android:text="save_change" />

    <com.google.android.material.bottomnavigation.BottomNavigationView

        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dairy_navigation_bottom_bar"
        app:itemBackground="@drawable/dairy_navigation_bottom_bar"
        app:itemIconTint="#fff"
        app:itemTextColor="#fff"
        app:menu="@menu/calculator_bottom_navigation_bar" />


</RelativeLayout>